<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Publish a New Book</title>
    <style>
      
    </style>
</head>
<body>
    <!-- Include header -->
    <%- include('header', { title: 'Publish New Book', user: user }) %>

    <div class="container">
        <h1>Publish a New Book</h1>

        <!-- Display any message passed from the server -->
        <% if (message) { %>
            <p class="message"><%= message %></p>
        <% } %>

        <!-- Display success message if book is published -->
        <% if (success) { %>
            <p class="success">Book published successfully!</p>
        <% } %>

        <!-- Book publishing form -->
        <form action="/publish" method="POST" enctype="multipart/form-data">
            <div>
                <label for="title">Book Title:</label>
                <input type="text" id="title" name="title" required>
            </div>
            <div>
                <label for="author">Author:</label>
                <input type="text" id="author" name="author" required>
            </div>
            <div>
                <label for="description">Description:</label>
                <textarea id="description" name="description" required></textarea>
            </div>
            <div>
                <label for="coverImage">Cover Image:</label>
                <input type="file" id="coverImage" name="coverImage" accept="image/*" required>
            </div>
            <div>
                <label for="publicationDate">Publication Date and Time:</label>
                <input type="datetime-local" id="publicationDate" name="publicationDate" required>
            </div>
            <div>
                <label for="pdfFile">Upload PDF:</label>
                <input type="file" id="pdfFile" name="pdfFile" accept="application/pdf" required>
            </div>
            <button type="submit">Publish Book</button>
        </form>
    </div>

    <!-- Include footer -->
    <%- include('footer') %>
</body>
</html>
