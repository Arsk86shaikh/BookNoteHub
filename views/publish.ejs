<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Publish a New Book</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #6366f1;
            --secondary-color: #8b5cf6;
            --accent-color: #ec4899;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --text-dark: #1e293b;
            --text-medium: #64748b;
            --text-light: #94a3b8;
            --bg-light: #f8fafc;
            --border-color: #e2e8f0;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #f8fafc 0%, #e0e7ff 50%, #fce7f3 100%);
            min-height: 100vh;
            padding-bottom: 3rem;
        }

        .container {
            max-width: 800px;
            margin: 120px auto 60px;
            padding: 0 2rem;
            animation: fadeInUp 0.6s ease-out;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .container > h1 {
            font-size: 3rem;
            background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #ec4899 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 1rem;
            font-weight: 900;
            text-align: center;
            letter-spacing: -0.5px;
        }

        .message {
            background: linear-gradient(135deg, #3b82f6, #2563eb);
            color: white;
            padding: 1.2rem 2rem;
            border-radius: 16px;
            margin-bottom: 2rem;
            font-weight: 600;
            font-size: 1.05rem;
            box-shadow: 0 6px 20px rgba(59, 130, 246, 0.3);
            border: 2px solid rgba(255, 255, 255, 0.3);
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .message::before {
            content: 'â„¹ï¸';
            font-size: 1.5rem;
        }

        .success {
            background: linear-gradient(135deg, #10b981, #059669);
            color: white;
            padding: 1.2rem 2rem;
            border-radius: 16px;
            margin-bottom: 2rem;
            font-weight: 600;
            font-size: 1.05rem;
            box-shadow: 0 6px 20px rgba(16, 185, 129, 0.3);
            border: 2px solid rgba(255, 255, 255, 0.3);
            display: flex;
            align-items: center;
            gap: 1rem;
            animation: slideInDown 0.5s ease-out;
        }

        .success::before {
            content: 'âœ“';
            font-size: 1.8rem;
            font-weight: bold;
        }

        @keyframes slideInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        form {
            background: white;
            padding: 3rem;
            border-radius: 24px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            border: 2px solid rgba(99, 102, 241, 0.1);
            position: relative;
            overflow: hidden;
        }

        form::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, #6366f1, #8b5cf6, #ec4899);
        }

        form > div {
            margin-bottom: 2rem;
            animation: fadeInUp 0.6s ease-out backwards;
        }

        form > div:nth-child(1) { animation-delay: 0.1s; }
        form > div:nth-child(2) { animation-delay: 0.2s; }
        form > div:nth-child(3) { animation-delay: 0.3s; }
        form > div:nth-child(4) { animation-delay: 0.4s; }
        form > div:nth-child(5) { animation-delay: 0.5s; }
        form > div:nth-child(6) { animation-delay: 0.6s; }
        form > div:nth-child(7) { animation-delay: 0.7s; }

        label {
            display: block;
            font-weight: 700;
            font-size: 1.05rem;
            color: var(--text-dark);
            margin-bottom: 0.8rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        label::before {
            font-family: 'Font Awesome 6 Free';
            font-weight: 900;
            color: var(--primary-color);
            font-size: 1.2rem;
        }

        label[for="title"]::before { content: '\f02d'; }
        label[for="author"]::before { content: '\f007'; }
        label[for="description"]::before { content: '\f036'; }
        label[for="coverImage"]::before { content: '\f03e'; }
        label[for="publicationDate"]::before { content: '\f017'; }
        label[for="pdfFile"]::before { content: '\f1c1'; }

        input[type="text"],
        input[type="datetime-local"],
        textarea {
            width: 100%;
            padding: 1rem 1.5rem;
            font-size: 1rem;
            border: 2px solid var(--border-color);
            border-radius: 12px;
            transition: all 0.3s ease;
            font-family: inherit;
            background: var(--bg-light);
            color: var(--text-dark);
        }

        input[type="text"]:focus,
        input[type="datetime-local"]:focus,
        textarea:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
            background: white;
        }

        textarea {
            min-height: 150px;
            resize: vertical;
            line-height: 1.6;
        }

        input[type="file"] {
            width: 100%;
            padding: 1.5rem;
            border: 3px dashed var(--border-color);
            border-radius: 12px;
            background: var(--bg-light);
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 1rem;
            color: var(--text-medium);
        }

        input[type="file"]:hover {
            border-color: var(--primary-color);
            background: rgba(99, 102, 241, 0.05);
        }

        input[type="file"]::file-selector-button {
            padding: 0.8rem 1.5rem;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            margin-right: 1rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
        }

        input[type="file"]::file-selector-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(99, 102, 241, 0.4);
        }

        /* Toggle Switch for Public/Private */
        .visibility-toggle {
            background: var(--bg-light);
            padding: 1.5rem;
            border-radius: 12px;
            border: 2px solid var(--border-color);
        }

        .toggle-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1rem;
        }

        .toggle-label {
            display: flex;
            align-items: center;
            gap: 0.8rem;
            font-weight: 700;
            font-size: 1.05rem;
            color: var(--text-dark);
        }

        .toggle-label i {
            font-size: 1.3rem;
            color: var(--primary-color);
        }

        .toggle-switch {
            position: relative;
            width: 60px;
            height: 30px;
        }

        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .toggle-slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: #cbd5e1;
            border-radius: 30px;
            transition: 0.4s;
        }

        .toggle-slider:before {
            position: absolute;
            content: "";
            height: 22px;
            width: 22px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            border-radius: 50%;
            transition: 0.4s;
        }

        input:checked + .toggle-slider {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        }

        input:checked + .toggle-slider:before {
            transform: translateX(30px);
        }

        .toggle-description {
            font-size: 0.95rem;
            color: var(--text-medium);
            line-height: 1.6;
            display: flex;
            align-items: flex-start;
            gap: 0.5rem;
        }

        .toggle-description i {
            margin-top: 0.2rem;
            color: var(--primary-color);
        }

        .visibility-status {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-weight: 600;
            font-size: 0.9rem;
            margin-top: 0.8rem;
        }

        .visibility-status.public {
            background: rgba(16, 185, 129, 0.1);
            color: var(--success-color);
        }

        .visibility-status.private {
            background: rgba(100, 116, 139, 0.1);
            color: var(--text-medium);
        }

        button[type="submit"] {
            width: 100%;
            padding: 1.2rem 2rem;
            font-size: 1.2rem;
            font-weight: 700;
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            color: white;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 8px 25px rgba(99, 102, 241, 0.35);
            margin-top: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1rem;
            animation: fadeInUp 0.6s ease-out 0.8s backwards;
        }

        button[type="submit"]::before {
            content: 'ðŸ“š';
            font-size: 1.5rem;
        }

        button[type="submit"]:hover {
            transform: translateY(-4px);
            box-shadow: 0 15px 40px rgba(99, 102, 241, 0.5);
            background: linear-gradient(135deg, #4f46e5, #7c3aed);
        }

        button[type="submit"]:active {
            transform: translateY(-2px);
        }

        button[type="submit"]:disabled {
            background: linear-gradient(135deg, #94a3b8, #64748b);
            cursor: not-allowed;
            transform: none;
        }

        button[type="submit"]:disabled::before {
            content: 'â³';
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        .helper-text {
            font-size: 0.9rem;
            color: var(--text-medium);
            margin-top: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .helper-text::before {
            content: 'ðŸ’¡';
            font-size: 1rem;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .container {
                margin: 100px auto 40px;
                padding: 0 1.5rem;
            }

            .container > h1 {
                font-size: 2.2rem;
            }

            form {
                padding: 2rem 1.5rem;
            }

            .toggle-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }
        }

        @media (max-width: 480px) {
            .container {
                padding: 0 1rem;
                margin: 90px auto 30px;
            }

            .container > h1 {
                font-size: 1.9rem;
            }

            form {
                padding: 1.8rem 1.2rem;
            }

            input[type="file"]::file-selector-button {
                display: block;
                width: 100%;
                margin-bottom: 0.8rem;
                margin-right: 0;
            }
        }
    </style>
</head>
<body>
    <%- include('header', { title: 'Publish New Book', user: user }) %>

    <div class="container">
        <h1><i class="fas fa-book-open"></i> Publish a New Book</h1>

        <% if (message) { %>
            <p class="message"><%= message %></p>
        <% } %>

        <% if (success) { %>
            <p class="success">Book published successfully!</p>
        <% } %>

        <form action="/publish" method="POST" enctype="multipart/form-data" id="publishForm">
            <div>
                <label for="title">Book Title:</label>
                <input type="text" id="title" name="title" placeholder="Enter the book title..." required>
            </div>

            <div>
                <label for="author">Author:</label>
                <input type="text" id="author" name="author" placeholder="Enter author name..." required>
            </div>

            <div>
                <label for="description">Description:</label>
                <textarea id="description" name="description" placeholder="Write a compelling description of the book..." required></textarea>
                <p class="helper-text">Provide a brief overview of what readers can expect from this book.</p>
            </div>

            <div>
                <label for="coverImage">Cover Image:</label>
                <input type="file" id="coverImage" name="coverImage" accept="image/*" required>
                <p class="helper-text">Upload an eye-catching cover image (JPG, PNG, or WEBP)</p>
            </div>

            <div>
                <label for="publicationDate">Publication Date and Time:</label>
                <input type="datetime-local" id="publicationDate" name="publicationDate" required>
                <p class="helper-text">Choose when you want this book to be published.</p>
            </div>

            <div>
                <label for="pdfFile">Upload PDF:</label>
                <input type="file" id="pdfFile" name="pdfFile" accept="application/pdf" required>
                <p class="helper-text">Upload the complete book in PDF format.</p>
            </div>

            <!-- Public/Private Toggle -->
            <div>
                <div class="visibility-toggle">
                    <div class="toggle-header">
                        <div class="toggle-label">
                            <i class="fas fa-eye"></i>
                            <span>Book Visibility</span>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" id="isPublic" name="isPublic" checked onchange="updateVisibilityStatus()">
                            <span class="toggle-slider"></span>
                        </label>
                    </div>
                    <div class="toggle-description">
                        <i class="fas fa-info-circle"></i>
                        <span id="visibilityDescription">
                            Make your book visible to the entire BookNote Hub community. Other users can discover, like, comment, and save your book to their reading list.
                        </span>
                    </div>
                    <div class="visibility-status public" id="visibilityStatus">
                        <i class="fas fa-globe"></i>
                        <span>Public - Visible to everyone</span>
                    </div>
                </div>
            </div>

            <button type="submit" id="submitBtn">Publish Book</button>
        </form>
    </div>

    <script>
        // Update visibility status
        function updateVisibilityStatus() {
            const toggle = document.getElementById('isPublic');
            const status = document.getElementById('visibilityStatus');
            const description = document.getElementById('visibilityDescription');
            
            if (toggle.checked) {
                status.className = 'visibility-status public';
                status.innerHTML = '<i class="fas fa-globe"></i><span>Public - Visible to everyone</span>';
                description.textContent = 'Make your book visible to the entire BookNote Hub community. Other users can discover, like, comment, and save your book to their reading list.';
            } else {
                status.className = 'visibility-status private';
                status.innerHTML = '<i class="fas fa-lock"></i><span>Private - Only you can see</span>';
                description.textContent = 'Keep your book private. Only you will be able to see and access this book in your personal library.';
            }
        }

        // Form submission handling
        const form = document.getElementById('publishForm');
        const submitBtn = document.getElementById('submitBtn');

        form.addEventListener('submit', function(e) {
            submitBtn.disabled = true;
            submitBtn.textContent = 'Publishing...';
        });

        // Auto-dismiss success message
        const successMsg = document.querySelector('.success');
        if (successMsg) {
            setTimeout(() => {
                successMsg.style.transition = 'opacity 0.5s ease';
                successMsg.style.opacity = '0';
                setTimeout(() => successMsg.remove(), 500);
            }, 5000);
        }

        // Set minimum date to today
        const dateInput = document.getElementById('publicationDate');
        const now = new Date();
        now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
        dateInput.min = now.toISOString().slice(0, 16);

        // File input preview
        const fileInputs = document.querySelectorAll('input[type="file"]');
        fileInputs.forEach(input => {
            input.addEventListener('change', function() {
                if (this.files.length > 0) {
                    console.log(`Selected: ${this.files[0].name}`);
                }
            });
        });
    </script>

    <%- include('footer') %>
</body>
</html>

