<%- include('header', { title: 'Privacy Policy', user: user }) %>

<style>
    .privacy-container {
        max-width: 900px;
        margin: 100px auto 40px;
        padding: 0 2rem;
    }

    .privacy-hero {
        text-align: center;
        padding: 60px 40px;
        background: linear-gradient(135deg, #f8fafc 0%, #e0e7ff 100%);
        border-radius: 24px;
        margin-bottom: 3rem;
        position: relative;
        overflow: hidden;
        animation: fadeInDown 0.6s ease-out;
    }

    .privacy-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--primary-color), var(--secondary-color), var(--accent-color));
    }

    .privacy-hero-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        color: white;
        font-size: 2.5rem;
        box-shadow: 0 10px 30px rgba(99, 102, 241, 0.3);
    }

    .privacy-hero h1 {
        font-size: 3rem;
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 1rem;
        font-weight: 800;
    }

    .privacy-hero-subtitle {
        color: var(--text-medium);
        font-size: 1.1rem;
        margin-bottom: 1rem;
    }

    .privacy-hero-date {
        color: var(--text-light);
        font-size: 0.95rem;
        font-weight: 600;
    }

    .privacy-content {
        background: white;
        border-radius: 24px;
        padding: 3rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(99, 102, 241, 0.1);
        animation: fadeInUp 0.8s ease-out;
    }

    .privacy-nav {
        background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
        border-radius: 16px;
        padding: 1.5rem;
        margin-bottom: 2.5rem;
        border: 2px solid rgba(99, 102, 241, 0.1);
    }

    .privacy-nav h3 {
        color: var(--text-dark);
        font-size: 1.2rem;
        margin-bottom: 1rem;
        font-weight: 700;
    }

    .privacy-nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .privacy-nav li {
        margin-bottom: 0.8rem;
    }

    .privacy-nav a {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        padding: 8px 12px;
        border-radius: 8px;
    }

    .privacy-nav a:hover {
        background: rgba(99, 102, 241, 0.1);
        transform: translateX(5px);
    }

    .privacy-section {
        margin-bottom: 3rem;
        scroll-margin-top: 120px;
    }

    .privacy-section h2 {
        font-size: 2rem;
        color: var(--text-dark);
        margin-bottom: 1.5rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 12px;
        padding-bottom: 1rem;
        border-bottom: 3px solid transparent;
        border-image: linear-gradient(90deg, var(--primary-color), var(--secondary-color)) 1;
    }

    .privacy-section h2 i {
        color: var(--primary-color);
    }

    .privacy-section h3 {
        font-size: 1.4rem;
        color: var(--text-dark);
        margin: 2rem 0 1rem;
        font-weight: 700;
    }

    .privacy-section p {
        color: var(--text-medium);
        line-height: 1.8;
        margin-bottom: 1.2rem;
        font-size: 1.05rem;
    }

    .privacy-section ul,
